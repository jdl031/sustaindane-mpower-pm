%h1 My Projects

%table
  %tr
    %th Company
    %th Name
    %th
    %th
    %th

  - @projects.each do |project|
    %tr
      %td= project.company.name
      %td= project.name
      %td= link_to 'Show', project
      - if permitted_to? :update, project
        %td= link_to 'Edit', edit_project_path(project)
      - if permitted_to? :destroy, project
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }

%br
