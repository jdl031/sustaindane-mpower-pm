%p#notice= notice

= link_to @project.company.name, @project.company

%table
  %tr
    %td
    %td= link_to @project.name, @project
    %td
      .progress.progress_striped{ :style => 'width: 200px;'}
        .bar{ :style => "width: #{@project.completion * 100.0}%;" }
    %td= @project.goal_date
    - if permitted_to? :update, :projects
      %td= link_to 'Edit', edit_project_path(@project)
    - if permitted_to? :destroy, :projects
      %td= link_to 'Delete', @project, :method => :delete 

%table
  - @project.tasks.order('complete asc, date(due) asc').each do |task|
    %tr
      %td
      %td
      %td= check_box_tag :complete, 1, task.complete, :disabled => true
      %td= link_to task.title, task
      %td= task.description
      %td= task.due
      %td= task.creator.email
      %td= task.owner.email
      - if permitted_to? :update, task
        %td= link_to 'Edit', edit_task_path(task)
      - if permitted_to? :destroy, task
        %td= link_to 'Delete', task, :method => :delete 
  %tr
    %td
    %td
    %td{:colspan => 3}= link_to 'New Task', new_task_path(:project_id => @project.id)
