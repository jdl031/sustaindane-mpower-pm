%h1
  = link_to @project.company.name, @project.company
  >
  = link_to @project.name, @project

%p#notice= notice

Completion:
= @project.completion
%br
Goal:
= @project.goal_date
%br

- if permitted_to? :update, @project
  = link_to 'Edit', edit_project_path(@project)
= link_to 'New Task', new_task_path(:project_id => @project.id)
%table
  %tr
    %th Complete
    %th Task
    %th Description
    %th Date Due
    %th Creator
    %th Owner
  - @project.tasks.order('complete asc, date(due) asc').each do |task|
    %tr
      %td= check_box_tag :complete, 1, task.complete, :disabled => true
      %td= link_to task.title, task
      %td= task.description
      %td= task.due
      %td= task.creator.email
      %td= task.owner.email
      - if permitted_to? :update, task
        %td= link_to 'Edit', edit_task_path(task)
      - if permitted_to? :destroy, task
        %td= link_to 'Delete', task, :method => :delete 
