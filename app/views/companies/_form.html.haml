.form-horizontal
  = form_for @company do |f|
    - if @company.errors.any?
      #error_explanation
        %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
        %ul
          - @company.errors.full_messages.each do |msg|
            %li= msg

    .media
      .media-body
        .media-heading
          %h3 New Company
          .control-group
            .control-label= f.label :name
            .controls= f.text_field :name
          .control-group
            .control-label= f.label :active
            .controls= f.check_box :active
          .control-group
            .controls
              = f.submit 'Save', :class => 'btn btn-primary'
