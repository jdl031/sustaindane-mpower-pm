.form-horizontal
  %h2 Sign in
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .control-group
      .control-label= f.label :email
      .controls= f.email_field :email
    .control-group
      .control-label= f.label :password
      .controls= f.password_field :password
    - if devise_mapping.rememberable?
      .control-group
        .control-label= f.label :remember_me
        .controls= f.check_box :remember_me
    .controls= f.submit "Sign in"
= render "devise/shared/links"
