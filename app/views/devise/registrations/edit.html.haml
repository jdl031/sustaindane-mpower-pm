%h2
  Edit #{resource_name.to_s.humanize}
.form-horizontal
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    .control-group
      .control-label= f.label :real_name
      .controls= f.text_field :real_name
    .control-group
      .control-label= f.label :title
      .controls= f.text_field :title
    .control-group
      .control-label= f.label :department
      .controls= f.collection_select :department_id, Department.all, :id, :name
    .control-group
      .control-label= f.label :email
      .controls= f.email_field :email
    .control-group
      .control-label= f.label :password
      .controls= f.password_field :password, :autocomplete => "off"
      .controls
        %i (leave blank if you don't want to change it)
    .control-group
      .control-label= f.label :password_confirmation
      .controls= f.password_field :password_confirmation
    .control-group
      .control-label= f.label :current_password
      .controls= f.password_field :current_password
      .controls
        %i (we need your current password to confirm your changes)
    .controls= f.submit "Update"
  %h3 Cancel my account
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
  = link_to "Back", :back
