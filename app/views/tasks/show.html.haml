%h1
  = link_to @task.project.company.name, @task.project.company
  >
  = link_to @task.project.name, @task.project
  >
  = link_to @task.title, @task
%p#notice= notice

%p
  %b Project:
  = @task.project
%p
  %b Creator:
  = @task.creator
%p
  %b Owner:
  = @task.owner
%p
  %b Title:
  = @task.title
%p
  %b Description:
  = @task.description
%p
  %b Due:
  = @task.due
%p
  %b Status:
  = @task.status

  %br
  - @task.comments.each do |comment|
    %tr
      %td= link_to 'Edit', edit_comment_path(comment)
      %td= link_to 'Delete', comment, :method => :delete 
      %td= link_to comment.comment, comment

= link_to 'Edit', edit_task_path(@task)
\|
= link_to 'Back', tasks_path
