= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :creator
    = f.text_field :creator
  .field
    = f.label :owner
    = f.text_field :owner
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :due
    = f.datetime_select :due
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
